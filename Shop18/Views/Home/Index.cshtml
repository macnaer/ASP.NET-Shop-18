@model Shop18.Models.ViewModels.HomeVM

<div class="container">
    <div class="text-center">
        <button class="btn btn-success filter-btn" data-filer="all" >All</button>
        @foreach(var item in Model.Categories)
         {
            <button class="btn btn-success filter-btn" data-filer="@item.Name">@item.Name</button>
         }
    </div>
    <br />
    <div class="row">
        @foreach(var item in Model.Products)
         {
            <partial name="_productCard" model="item" />
         }
    </div>
</div>


@section Scripts{ 
    <script>
        $(document).ready(function () {
            $(".filter-btn").click(function () {
                let value = $(this).attr("data-filer");
                if (value == "all") {
                    $(".filter").show("1000");
                } else {
                    $(".filter").not("." + value).hide("3000");
                    $(".filter").filter("." + value).show("3000");
                }
            })
        })
    </script>

}
