@model Shop18.Models.Category


<form method="post" asp-controller="Category" asp-action="Edit">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit category</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ShowOrder"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ShowOrder" class="form-control" />
                        <span class="text-danger" asp-validation-for="ShowOrder"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-success w-100" value="Edit" />
                        </div>
                        <div class="col">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-dark w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}